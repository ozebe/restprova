<div>
  <table class="table">
    <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Endereço</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @restaurants.order("name").each do |restaurant|%>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.telephone %></td>
        <td><%= restaurant.address %></td>
        <td><%= link_to 'Visualizar', restaurant %></td>
        <td><%= link_to 'Editar', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Apagar', restaurant, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>



